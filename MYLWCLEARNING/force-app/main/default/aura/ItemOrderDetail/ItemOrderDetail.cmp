<aura:component implements="lightning:isUrlAddressable">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="orderId" type="String" />
    
    <aura:attribute name="record" type="object" />
    <aura:attribute name="orderRecord" type="object" />
    <aura:attribute name="targetError" type="String" />
    
    <force:recordData aura:id = "recordViewer"
                      recordId="{!v.orderId}"
                      targetRecord="{!v.record}"
                      targetFields="{!v.orderRecord}"
                      layoutType="FULL"
                      targetError="{!v.targetError}" />
    
     <div class="slds-page-header">
    	<div class="slds-page-header__row">
            <div class="slds-page-header__col-title">
                    <div class="slds-media">
                        <div class="slds-media__figure">
                            <lightning:icon iconName="custom:custom4" alternativeText="Doc image" 
                                            size="large"></lightning:icon>
                        </div>
                        <div class="slds-media__body">
                        <div class="slds-page-header__name">
                        <div class="slds-page-header__name-title">
                        <h1>
                        <span class="slds-page-header__title slds-truncate" title="Rohde Corp - 80,000 Widgets">{!v.orderRecord.Name}</span>
                        </h1>
                        </div>
                        </div>
                        <p class="slds-page-header__name-meta">
                            {!v.orderRecord.Name}
                            <p><lightning:formattedDateTime value="{!v.orderRecord.CreatedDate}" year="numeric" month="short" day="2-digit" weekday="long"/></p>
                            </p>
                        </div>
                    </div>
            </div>
    	</div>
    </div>
    <div class="slds-p-around_small">
    	<lightning:recordForm
            recordId="{!v.orderId}"
            objectApiName="Product_Order__c"
            layoutType="Full"
			columns="2"
            mode="readonly" />
    </div>
    
    
</aura:component>